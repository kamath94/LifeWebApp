@model PresentLog
@{
    ViewData["Title"] = "Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h1>@ViewData["Title"]</h1>



<form class="container-fluid" method="post">
    <fieldset asp-validation-for="ModelOnly">

        @if (ViewBag.ErrorMessage != null)
        {
            @switch (ViewBag.Type)
            {
                case "Success":
                    <div class="alert alert-dismissible alert-success">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>Success !</strong> @ViewBag.ErrorMessage
                    </div>
                    break;
                case "Warning":
                    <div class="alert alert-dismissible alert-warning">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <h4 class="alert-heading">Warning!</h4>
                        <p class="mb-0"> @ViewBag.ErrorMessage</p>
                    </div>
                    break;
                case "Error":
                    <div class="alert alert-dismissible alert-danger">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>Oh snap!</strong> @ViewBag.ErrorMessage
                    </div>
                    break;
            }

        }

        <div class="form-group">
            <label class="form-label mt-4">Phone Number </label>
            <input type="text" class="form-control" id="InputPhone" asp-for="Phone" />
            <span asp-validation-for="Phone" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label mt-4">Date Of Attendance</label>
            <input type="date" class="form-control" id="DateOfAttendancet" asp-for="AttendDate" />
            <span asp-validation-for="AttendDate" class="alert-danger"></span>
        </div>


        <div class="form-label mt-4">
            <button type="submit" value="submit" onclick="alert" class="btn btn-primary">Submit</button>
        </div>


    </fieldset>
</form>

